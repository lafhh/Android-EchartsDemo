<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow>
                <TextView
                    android:text="Open..."
                    android:padding="3dp"
                    />
                <TextView
                    android:text="Ctrl+O"
                    android:padding="3dp"
                    android:gravity="right"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Save..."
                    android:padding="3dp"
                    />
                <TextView
                    android:text="Ctrl+S"
                    android:padding="3dp"
                    android:gravity="right"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Save As..."
                    android:padding="3dp"
                    />
                <TextView
                    android:text="Ctrl+Shift+S"
                    android:padding="3dp"
                    android:gravity="right"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/table_layout_9_save_all"
                    android:padding="3dp"
                    />
                <TextView
                    android:text="Ctrl+E"
                    android:padding="3dp"
                    android:gravity="right"
                    />
            </TableRow>
           <TableRow>
               <TextView
                   android:text="Import..."
                   android:padding="3dp"
                   />
           </TableRow>
            <TableRow>
                <TextView
                    android:text="Export..."
                    android:padding="3dp"
                    />
                <TextView
                    android:text="Ctrl+E"
                    android:padding="3dp"
                    android:gravity="right"
                    />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle Shrink" />
    </LinearLayout>
</ScrollView>