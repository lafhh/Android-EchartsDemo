<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TableLayout
            android:id="@+id/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
    >
        <TableRow>
            <TextView
                    android:id="@+id/textview0_row1"
                    android:gravity="center"
                    android:text="col1"/>

            <TextView
                    android:id="@+id/textview1_row1"
                    android:gravity="center"
                    android:text="col2"/>
            <TextView
                    android:id="@+id/textview2_row1"
                    android:layout_span="2"
                    android:gravity="center"
                    android:text="col3"/>

            <TextView
                    android:id="@+id/textview3_row1"
                    android:gravity="center"
                    android:text="col4"/>

            <TextView
                    android:id="@+id/textview4_row1"
                    android:gravity="center"
                    android:text="col5"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:id="@+id/textview0_row1"
                    android:gravity="center"
                    android:text="col1,1"/>

            <TextView
                    android:id="@+id/textview1_row1"
                    android:gravity="center"
                    android:text="col1,2"/>
            <TextView
                    android:id="@+id/textview2_row1"
                    android:layout_span="2"
                    android:gravity="center"
                    android:text="col1,3"/>

            <TextView
                    android:id="@+id/textview3_row1"
                    android:gravity="center"
                    android:text="col1,4"/>

            <TextView
                    android:id="@+id/textview4_row1"
                    android:gravity="center"
                    android:text="col1,5"/>
        </TableRow>
        <ScrollView
                android:id="@+id/scrollview"
        >

        </ScrollView>
    </TableLayout>

</LinearLayout>